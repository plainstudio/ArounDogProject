<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:jee="http://www.springframework.org/schema/jee"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/jee http://www.springframework.org/schema/jee/spring-jee-4.3.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.3.xsd">

	<!-- 웹에서는 프론트로 옮겨야함 아니면 안먹음(트랜잭션 매니저만 안먹음)  -->
	<!-- 데이타소스 빈 -->
<!-- 	<jee:jndi-lookup id="dataSource"
		jndi-name="jdbc/myoracle" resource-ref="true" /> -->
	<jee:jndi-lookup id="dataSource"
		jndi-name="jdbc/mysql" resource-ref="true" />

	

	<!-- 마이바티스 팩토리 -->
	<bean id="sqlSessionFactoryBean"
		class="org.mybatis.spring.SqlSessionFactoryBean"
		p:dataSource-ref="dataSource"
		p:configLocation="classpath:com/aroundog/mybatis/config/mybatis-configbymysql.xml" />

	<!-- 마이바티스 템플릿 빈 -->
	<bean id="sqlSessionTemplate"
		class="org.mybatis.spring.SqlSessionTemplate">
		<constructor-arg ref="sqlSessionFactoryBean" />
	</bean>

	<!-- 어노테이션 -->
   <context:component-scan
      base-package="com.aroundog">
      <context:exclude-filter type="annotation" expression="org.springframework.stereotype.Controller"/>
      <context:exclude-filter type="annotation" expression="org.springframework.web.bind.annotation.RestController"/>
   </context:component-scan>


</beans>
